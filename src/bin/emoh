# -----------------------------------------------------------------------

export EXIT_SUCCESS=0;
export EXIT_BADARGS=1;
export EXIT_ERROR=2;

export REPO=$HOME/.emoh/repo
export GIT=/usr/bin/git

# -----------------------------------------------------------------------
# Utility Funcs
# -----------------------------------------------------------------------

##
# Prints usage information
#
usage()
{
  sed -e 's/    //' <<"  EOF"
    Usage:
        emoh command [command args]

    Commands:
        h, help: print this message
  EOF
}

##
# Exit with a fatal error
#
# @param $*
# The error message to display
#
fatal()
{
  echo $*
  exit $EXIT_ERROR;
}

##
# Sets up intial repository, if required
#
initcheck()
{
  if [ ! -r $REPO ];
  then
    initrepo;
  fi
}

##
# Setup initial repository
#
initrepo()
{
  mkdir -p $REPO
  cd $REPO
  $GIT init
  echo repository created in: $REPO
}

# -----------------------------------------------------------------------
# User Commands
# -----------------------------------------------------------------------


##
# Provides direct git access to the repository
#
# @param $@
# The stuff to pass to git
#
cmd_git()
{
  initcheck;

  cd $REPO
  $GIT "$@"
}


# -----------------------------------------------------------------------
# Main
# -----------------------------------------------------------------------

##
# Main
#
# @param $@
# Expects the full list of CLI args as $@
#
main()
{
  case $1 in

    # command: help
    h*)
      usage; exit $EXIT_SUCCESS
      ;;

    # command: help
    git)
      shift;
      cmd_git "$@"
      ;;

    # command: <unknown>
    *)
      echo -e Error: Unknown argument $1 '\n';
      usage; exit $EXIT_BADARGS
      ;;

  esac
}

main "$@";
